{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "after-used", "varsIgnorePattern": "^_" }],
    "no-constant-condition": ["warn", { "checkLoops": false }]
  }
}

